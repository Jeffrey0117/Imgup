{
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "functions": {
    "src/app/api/upload/route.ts": {
      "maxDuration": 10,
      "memory": 512
    },
    "src/app/api/shorten/route.ts": {
      "maxDuration": 10,
      "memory": 128
    },
    "src/app/api/smart-route/[hash]/route.ts": {
      "maxDuration": 10,
      "memory": 256
    },
    "src/app/api/cron/snapshot/route.ts": {
      "maxDuration": 60,
      "memory": 512
    },
    "src/app/api/*/route.ts": {
      "maxDuration": 10
    }
  },
  "crons": [
    {
      "path": "/api/cron/snapshot",
      "schedule": "0 3 * * *"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "VERCEL_FUNCTION_MAX_SIZE": "50mb"
  }
}
